<Window x:Class="Loading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Matrix Chat Beta v1.0 by Loading" Height="600" Width="900"
        Background="#0D0D0D"
        FontFamily="Consolas"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <Style x:Key="MatrixTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00FF00" BlurRadius="2" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CyberpunkScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#FF00FF00"/>
            <!-- Matrix green -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Background="#FF00FF00" 
                                           BorderBrush="#FF00FF00"
                                           Opacity="0.7"
                                           Width="10">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CyberpunkListBoxItem" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <!-- Matrix green -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FF00FF"/>
                                <!-- Semi-transparent matrix green for hover -->
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <!-- White text on hover -->
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#66FF00FF"/>
                                <!-- More opaque matrix green for selection -->
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CyberpunkButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0CFF00"/>
            <!-- Slightly brighter green -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <!-- Make text bold -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0CFF00" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Margin="2">
                            <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                <!-- Semi-transparent background panel for better text visibility -->
                                <Border Background="#15000000" CornerRadius="4" Margin="0">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F00FF00"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0CFF00" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6600FF00"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#0CFF00" BlurRadius="10" ShadowDepth="0" Opacity="1.0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" MinHeight="100" />
            <RowDefinition Height="Auto" />
            <!-- For input box -->
        </Grid.RowDefinitions>

        <!-- Left side panel with Matrix animation -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Background="#0D0D0D">
            <!-- Matrix Canvas underneath everything -->
            <Canvas x:Name="MatrixCanvas" 
                    Width="100" 
                    Height="600" 
                    ClipToBounds="True"
                    Background="Transparent"
                    Panel.ZIndex="0"/>

            <!-- Buttons panel with improved visibility -->
            <Border Background="#22000000" CornerRadius="5" Margin="5,40,5,5" Panel.ZIndex="5">
                <StackPanel Margin="0" VerticalAlignment="Top" Panel.ZIndex="10">
                    <Button x:Name="ConnectButton" 
                            Content="Connect" 
                            Width="85" 
                            Height="30" 
                            Click="ConnectButton_Click"
                            Style="{StaticResource CyberpunkButton}"
                            Background="Transparent"
                            BorderThickness="0" 
                            Margin="0,5,0,1" />
                    <Button x:Name="DisconnectButton" 
                            Content="Disconnect" 
                            Width="85" 
                            Height="30"
                            Click="DisconnectButton_Click"
                            Style="{StaticResource CyberpunkButton}"
                            Background="Transparent"
                            BorderThickness="0" 
                            Margin="0,0,0,1" />
                    <Button x:Name="ClearChatButton" 
                            Content="Clear Chat" 
                            Width="85" 
                            Height="30"
                            Click="ClearChatButton_Click"
                            Style="{StaticResource CyberpunkButton}"
                            Background="Transparent" 
                            BorderThickness="0"
                            Margin="0,0,0,1" />
                    <Button x:Name="ProfileButton" 
                            Content="Profile" 
                            Width="85" 
                            Height="30"
                            Click="ProfileButton_Click"
                            Style="{StaticResource CyberpunkButton}"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,0,1" />
                    <Button x:Name="HelpButton" 
                            Content="Help" 
                            Width="85" 
                            Height="30"
                            Click="HelpButton_Click"
                            Style="{StaticResource CyberpunkButton}"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,0,5" />
                </StackPanel>
            </Border>

            <!-- Second Matrix Canvas (not needed anymore since first one spans everything) -->
            <Canvas x:Name="MatrixCanvas2" 
                    Visibility="Collapsed"
                    Width="1" 
                    Height="1" />

            <!-- Ping Display at the bottom -->
            <Border Background="#22000000" CornerRadius="5" Margin="5" Panel.ZIndex="5" VerticalAlignment="Bottom">
                <TextBlock x:Name="PingDisplay"
                           Margin="5"
                           FontFamily="Consolas"
                           FontSize="11"
                           Text="-- ms"
                           TextAlignment="Center"
                           Panel.ZIndex="10"
                           FontWeight="Bold"
                           Foreground="#00FF00"/>
            </Border>
        </Grid>

        <!-- Chat Display Section -->
        <Border Grid.Row="0" Grid.Column="1" Margin="10" Background="#1A1A1A" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" />
            </Border.Effect>
            <RichTextBox x:Name="rtbChat" 
                 Margin="10" 
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="#1A1A1A" 
                 Foreground="#00FF00" 
                 BorderThickness="0">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CyberpunkScrollBar}"/>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="LineHeight" Value="16"/>
                    </Style>
                </RichTextBox.Resources>
                <RichTextBox.Document>
                    <FlowDocument PagePadding="0" 
                         LineHeight="13"
                         LineStackingStrategy="BlockLineHeight">
                    </FlowDocument>
                </RichTextBox.Document>
            </RichTextBox>
        </Border>

        <!-- GridSplitter for resizing whispers section -->
        <GridSplitter Grid.Row="1" 
              Grid.Column="1" 
              Height="8"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center"
              Background="#1A1A1A"
              Margin="10,0,10,0"
              BorderThickness="1"
              Cursor="SizeNS">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Border x:Name="PART_Border"
                    Background="#00FF00"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Opacity="0.7"
                    CornerRadius="2">
                        <Grid>
                            <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                                <TextBlock Text="⋮" 
                                 Foreground="#1A1A1A" 
                                 FontSize="14"
                                 FontWeight="Bold"
                                 Margin="2,0"/>
                                <TextBlock Text="⋮" 
                                 Foreground="#1A1A1A" 
                                 FontSize="14"
                                 FontWeight="Bold"
                                 Margin="2,0"/>
                                <TextBlock Text="⋮" 
                                 Foreground="#1A1A1A" 
                                 FontSize="14"
                                 FontWeight="Bold"
                                 Margin="2,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="1.0"/>
                            <Setter Property="Height" Value="10"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <!-- Whispers Display Section -->
        <Border Grid.Row="2" Grid.Column="1" Margin="10,0,10,10" Background="#1A1A1A" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" />
            </Border.Effect>
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="5">
                    <Border Background="#333333" CornerRadius="5">
                        <TextBlock Text="Whispers" 
                                 Foreground="#00FFFF" 
                                 FontWeight="Bold" 
                                 Margin="10,5" 
                                 TextAlignment="Center"/>
                    </Border>
                </Grid>
                <RichTextBox x:Name="rtbWhispers" 
                         Margin="10" 
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="#1A1A1A" 
                         Foreground="#00FFFF" 
                         BorderThickness="0">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CyberpunkScrollBar}"/>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="LineHeight" Value="16"/>
                        </Style>
                    </RichTextBox.Resources>
                    <RichTextBox.Document>
                        <FlowDocument PagePadding="0"
                                    LineHeight="16"
                                    LineStackingStrategy="BlockLineHeight">
                        </FlowDocument>
                    </RichTextBox.Document>
                </RichTextBox>
            </DockPanel>
        </Border>

        <!-- User List Section -->
        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Margin="10" Background="#1A1A1A" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" />
            </Border.Effect>
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="5">
                    <Border Background="#333333" CornerRadius="5">
                        <TextBlock x:Name="ChannelInfo" Foreground="#00FF00" 
                                 FontWeight="Bold" Margin="10,5" 
                                 TextAlignment="Center"/>
                    </Border>
                </Grid>
                <ListBox x:Name="UserList" 
                         Background="#1A1A1A" 
                         Foreground="#00FF00" 
                         Margin="10"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         ScrollViewer.CanContentScroll="True"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                         ItemContainerStyle="{StaticResource CyberpunkListBoxItem}">
                    <ListBox.Resources>
                        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CyberpunkScrollBar}"/>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}" 
                                     Foreground="{Binding UserColor}"
                                     FontWeight="{Binding NameWeight}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Message Input and Send -->
                    <!-- Message Input and Send -->
        <Grid Grid.Row="3" Grid.Column="1" Margin="10,5,10,10">
                <Border Background="#1A1A1A"
            CornerRadius="5" 
            HorizontalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" />
                    </Border.Effect>
                    <TextBox x:Name="UserInput" 
                 Margin="5"     
                 Background="#1A1A1A" 
                 Foreground="#00FF00" 
                 BorderThickness="0" 
                 KeyDown="UserInput_KeyDown"
                 HorizontalAlignment="Stretch" />
                </Border>
                <Button Grid.Column="1" 
            Content="Send" 
            Width="80" 
            Height="30"
            Click="SendButton_Click" 
            Style="{StaticResource CyberpunkButton}"
            BorderThickness="0"
            HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</Window>