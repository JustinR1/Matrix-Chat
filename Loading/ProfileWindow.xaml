<Window x:Class="Loading.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Settings" 
        Height="800" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0D0D0D"
        FontFamily="Consolas">

    <Border Background="#1A1A1A" Margin="5" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="#00FF00" BlurRadius="10" ShadowDepth="0" />
        </Border.Effect>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Profile Settings" 
                      FontSize="24" 
                      Margin="0,0,0,20"
                      Grid.Row="0"
                      Foreground="#00FF00"/>

            <!-- Login Settings -->
            <TextBlock Text="Login Settings" 
                      Margin="0,10,0,10"
                      Grid.Row="1"
                      Foreground="#00FF00"/>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Username:" Foreground="#00FF00"/>
                <TextBox x:Name="UsernameTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Password:" Foreground="#00FF00"/>
                <PasswordBox x:Name="PasswordBox" 
                           Background="#1A1A1A"
                           Foreground="#00FF00"
                           BorderBrush="#00FF00"
                           BorderThickness="1"
                           Margin="0,5,0,0"
                           Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,10">
                <TextBlock Text="Home Channel:" Foreground="#00FF00"/>
                <TextBox x:Name="ChannelTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <!-- Connection Settings -->
            <TextBlock Text="Connection Settings" 
                      Margin="0,10,0,10"
                      Grid.Row="5"
                      Foreground="#00FF00"/>

            <StackPanel Grid.Row="6" Margin="0,0,0,10">
                <TextBlock Text="Server Address:" Foreground="#00FF00"/>
                <TextBox x:Name="ServerAddressTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="0,0,0,10">
                <TextBlock Text="Port Number:" Foreground="#00FF00"/>
                <TextBox x:Name="PortNumberTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="8" Margin="0,0,0,10">
                <TextBlock Text="Base Reconnect Delay (ms):" Foreground="#00FF00"/>
                <TextBox x:Name="DelayTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="9" Margin="0,0,0,10">
                <TextBlock Text="Reconnect Scatter (ms):" Foreground="#00FF00"/>
                <TextBox x:Name="ScatterTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <!-- Command Settings -->
            <TextBlock Text="Command Settings" 
                      Margin="0,10,0,10"
                      Grid.Row="10"
                      Foreground="#00FF00"/>

            <StackPanel Grid.Row="11" Margin="0,0,0,10">
                <TextBlock Text="Command Trigger:" Foreground="#00FF00"/>
                <TextBox x:Name="TriggerTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="12" Margin="0,0,0,10">
                <TextBlock Text="Master Username:" Foreground="#00FF00"/>
                <TextBox x:Name="MasterTextBox" 
                        Background="#1A1A1A"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,5,0,0"
                        Padding="5"/>
            </StackPanel>

            <TextBlock x:Name="StatusMessage" 
                      Grid.Row="13" 
                      Foreground="#00FF00"
                      TextWrapping="Wrap"
                      VerticalAlignment="Center"/>

            <StackPanel Grid.Row="14" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,20,0,0">
                <Button Content="Save" 
                        Click="SaveButton_Click" 
                        Width="80" 
                        Height="30"
                        Background="Transparent"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click" 
                        Width="80"
                        Height="30"
                        Background="Transparent"
                        Foreground="#00FF00"
                        BorderBrush="#00FF00"
                        BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>